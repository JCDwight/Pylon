#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import CardTransition kivy.uix.screenmanager.CardTransition
#: import WipeTransition kivy.uix.screenmanager.WipeTransition

WindowManager:
    FirstSplashScreen:
    CheckinScreen:
    MainWindow:

                
<CheckinScreen>:
    name: "checkin"
    checkinScreenPictureBox: pictureBoxCheckin

    FloatLayout:
        size: root.width, root.height
        pos: 0, 0
        Widget:
            size: 0, root.height
            Image:
                id: pictureBoxCheckin
                pos: 0, 0
                size_hint_x: None
                size_hint_y: None
                source: 'jay.png'
                size: 400, 480
                allow_stretch: False
                keep_ratio: False
        Label:
            id: checkinScreenLabel
            size_hint_x: None
            size_hint_y: None

            halign: 'left'
            valign: 'top'
            font_name: "helvetica"
            font_size: 30
            text:"Check-in time: "
            size: root.width / 2, root.height / 2
            pos: root.width / 2, root.height / 2
        Button:
            id: checkinScreenButton
            size_hint_x: None
            size_hint_y: None
            text:"OK"
            font_name: "helvetica"
            font_size: 80
            size: root.width / 2, root.height / 2
            pos: root.width / 2, 0
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "up"

<MainWindow>:
    name: "main"
    
    FloatLayout:
        size: root.width, root.height
        pos: 0, 0     
        Button:
            size_hint_x: None
            size_hint_y: None
            text:"Checkin Screen"
            font_name: "helvetica"
            font_size:30
            size: root.width / 2, root.height / 2
            pos: root.width / 2, 0
            on_release: 
                app.root.transition = WipeTransition()
                app.root.transition.direction = "down"
                app.root.current = "checkin"
                        
        Button:
            size_hint_x: None
            size_hint_y: None
            text:"Splash Screen"
            font_name: "helvetica"
            font_size: 30
            size: root.width / 2, root.height / 2
            pos: 0, 0
            on_release: 
                app.root.current = "firstsplash"
                
<FirstSplashScreen>:
    name: "firstsplash"
    splashScreenPictureBox: splashScreenPictureBox
    
    FloatLayout:
        id: firstSplashScreenFloatLayout
        size: root.width, root.height
        pos: 0, 0     
        Widget:
            size: root.width / 2, root.height
            Image:
                id: splashScreenPictureBox
                pos: 0, 0
                size_hint_x: None
                size_hint_y: None
                source: 'newtonsquared-black.png'
                size: 800, 480
                allow_stretch: False
                keep_ratio: False
